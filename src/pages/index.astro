---
import Navbar from '../components/Navbar.astro';
import About from '../components/About.astro';
import Horarios from '../components/Horarios.astro'
import Footer from '../components/Footer.astro'
import Location from '../components/Location.astro';
import Specials from '../components/Specials.astro'
import Dishes from '../components/Dishes.astro';
import Layout from '../layouts/Layout.astro';
import hero from '../images/dishes/hero.jpg';
import { Image } from 'astro:assets';
---

<Layout title="Eucalyptus" description="Sabores autenticos">
	<Navbar client:idle/>
	<link rel="preload" as="image" href="../images/dishes/hero.jpg" />
	<div class="w-full h-[71vh] relative">
		<Image src={ hero } alt="Delicious dishes" class="object-cover object-bottom w-full h-full" />
	  </div>
	<Dishes />
	<Specials />
	<About />
	<Horarios />
	<Location />
	<Footer />
</Layout>
